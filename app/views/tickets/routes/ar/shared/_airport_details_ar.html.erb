				</li>
				<li>
					<label><%= I18n.t('airport.phone') %> <span class='pull-right-ticket'>:</span></label>
					<span><%= airport_details["arr_airport_phone"] %></span>
				</li>
				<li>
					<label><%= I18n.t('airport.email') %> <span class='pull-right-ticket'>:</span></label>
					<span><%= airport_details["arr_airport_email"] %></span>
				</li>
				<li>
					<label> <%= I18n.t('airport.website') %><span class='pull-right-ticket'>:</span></label>
					<span>
						<a rel="nofollow" href="<%= airport_details["arr_airport_website"] %>" target="_blank">
							<%= airport_details["arr_airport_website"] %></a>
