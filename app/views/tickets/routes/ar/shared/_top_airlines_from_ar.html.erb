<style type="text/css">
	.white-card .top-airlines .airline-link {
    width: 70%;
    float: right;
    background: 0 0;
    color: #43445c;
    padding: 0;
}
</style>
	
	<div class="white-card">
		<h2><%= t('flight_schedule.top_airlines_from') %> <%= dep_city_name%></h2>
	<ul class="list-unstyled top-airlines">
		<% top_airlines.each do |airline_code| %>
		<% I18n.locale = "en" %>
		<% airline_name_en = t("airlines.#{airline_code}") %>
		<% I18n.locale = "ar" %>
		<% airline_name =  t("airlines.#{airline_code}")  %>
		<% formated_carrier_name =  airline_name.downcase.gsub(" ",'-').gsub('--','-') %>
		<li>
				<a href="<%= "/ar/flight-booking/"+format_airline_name(airline_name_en).downcase.gsub(" ", "-").gsub("--","-") + ".html" %>" class="airline-link">
					<div class="R-airline-logo "><span class="carrier-logo <%= formated_carrier_name %>"></span></div>
					<div class="R-airline-name"><span><%= airline_name %></span></div>
				</a>
				<div class="R-book">
			 <%= link_to( t("brand.check_price"), "/ar/flight-booking/" + format_airline_name(I18n.with_locale(:en) { t("airlines.#{airline_code}") }).downcase.gsub(" ", "-").gsub("--","-") + ".html",:class=>"booking-btn",:class=>"booking-btn") %>
			 </div>
			 <div class="clearfix"></div>
		</li>

		<% end %>
	</ul>
</div>