

<% application_helper = self.extend ApplicationHelper
currency_code = application_helper.currency_code(@country_code)
%>
<h2 id="heading-price">Flight tickets from <%= dep_city_name %> to <%= arr_city_name %></h2>
<div id="response-new"></div>
<div class="hidden-xs desktop_top_routes" id="price-table" >
	<% route_count = 0
	routes.each do |route|
		route.stringify_keys!
		route_type = route["dep_country_code"] != country_code || route["arr_country_code"] != country_code ? "int" : "dom"
		route_count+=1
		%>
		<% unless I18n.t("airlines.#{route["carrier_code"]}").include?("translation missing") %>
		<% formated_carrier_name = route["carrier_code"] == "AI" ? "air-india" :  I18n.t("airlines.#{route["carrier_code"]}").downcase.gsub(" ",'-').gsub('--','-') rescue "" %>
		<% end %>
		<% airline_name = route["carrier_code"] == "AI" ? "Air India" :  t("airlines.#{route["carrier_code"]}")
		   link = format_overview_link(airline_name)
		 %>
		 <% if !airline_name.include?("translation missing")%>
		<div class="airline-wrapper <%= route_count>10 ? 'hide showMore' : "" %>" >
			<ul class="list-inline">
				<%# formated_carrier_name = route["carrier_code"] == "AI" ? "air-india" :  t("airlines.#{route["carrier_code"]}").downcase.gsub(" ",'-').gsub('--','-') %>
				<%# airline_name = route["carrier_code"] == "AI" ? "Air India" :  t("airlines.#{route["carrier_code"]}")
				   link = format_overview_link(airline_name)
				 %>
				<li class="airline">
					<a href="/flight-booking/<%= format_overview_link(airline_name) %>.html" title="<%= airline_name  %>"><span class=" carrier-logo <%= formated_carrier_name%>"></span>
					<span class="airline-names"><%= airline_name %> <small><%= route["flight_no"] %></small></span></a>
				</li>
				<li class="timing">
					<div class="t-blcok depart"><%= Time.strptime(route["dep_time"],"%H:%M").to_time.strftime("%I:%M %p") %></div>

            <div class="t-blcok duration"> <%= route["format_duration"] %><small>Non-Stop</small></div>

					<div class="t-blcok arrival"><%= Time.strptime(route["arr_time"],"%H:%M").to_time.strftime("%I:%M %p")  %></div>
				</li>

				<li class="min-price">
					<!-- <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div> -->
          <%= (route["cc_min_price"].present? && route["cc_min_price"] > 0 ) ?  "#{currency_code} " +  route["cc_min_price"].to_s : "--NA--"%>
				</li>
				<li class="book-section">
					<a data-route="<%=schedule_layout_values["dep_airport_code"]%>-<%= schedule_layout_values["arr_airport_code"]%>-<%= route["carrier_code"] %>" href="" class="booking-btn flight-schedule-booking">
						<% if route["cc_min_price"].to_i > 0 %>
							Book <span class="hidden-xs">Now</span>
						<% else %>
						  Check <span class="hidden-xs">Price</span>
						<% end %>
				</a></li>
			</ul>
		</div>
		<% end %>
		<% end %>
		<% if routes.count >10 %>
		<p class="text-right viewall"><a  id ="show_all_flights_new" href="#">View All Flights Schedules</a></p>
		<% end %>
	</div>
	<div class = "visible-xs mobile_top_routes">
		<% route_count = 0
		routes.each do |route|
			route_type = route["dep_country_code"] != country_code || route["arr_country_code"] != country_code ? "int" : "dom"
			route_count+=1
			%>
			<% unless I18n.t("airlines.#{route["carrier_code"]}").include?("translation missing") %>
			<% formated_carrier_name = route["carrier_code"] == "AI" ? "air-india" :  t("airlines.#{route["carrier_code"]}").downcase.gsub(" ",'-').gsub('--','-') %>
				<% airline_name =  route["carrier_code"] == "AI" ? "Air India" :  t("airlines.#{route["carrier_code"]}") %>
			<% end %>
			<% if airline_name.present? &&  !airline_name.include?("translation missing") %>
				<div class="airline-wrapper <%= route_count>10 ? 'hide showMore' : "" %>">
					
					<ul class="list-inline">
						<li class="airline">
							<span class=" carrier-logo <%= formated_carrier_name%>"></span>
							<span class="airline-names"><%= airline_name %> <small><%= route["flight_no"] %></small></span>
						</li>
						<li class="timing">
							<div class="t-blcok depart"><%= Time.strptime(route["dep_time"],"%H:%M").to_time.strftime("%I:%M %p") %></div>
							<div class="t-blcok arrival"><%= Time.strptime(route["arr_time"],"%H:%M").to_time.strftime("%I:%M %p") %></div>
						</li>
						<li class="min-price"><a  data-route="<%=schedule_layout_values["dep_airport_code"]%>-<%=schedule_layout_values["arr_airport_code"]%>-<%= route["carrier_code"] %>-<%= route_type %>" href="" class="booking-btn flight-schedule-booking">
							<% if route["cc_min_price"].to_i > 0 %>
							<%= application_helper.currency_code(@country_code) %> <%= route["cc_min_price"].to_i %>
							<% else %>
							Check
							<% end %>
						</a></li>
					</ul>
				</div>
			<% end %>
		<% end %>
			<% if routes.count >10 %>
			<p class="text-right viewall"><a  id ="show_all_flights_mobile_new" href="#">View All Flights Schedules</a></p>
			<% end %>
		</div>
