
<%if @country_code == "IN"%>
	<% top_airlines = top_airlines %>
<% elsif @country_code == "SA" %>
	<% top_airlines = ["SV","XY","F3","GF","FZ","G9","WY","EY","MS","AI","TK","EK","UL","KU","NE","LH","RJ","NP","SM","8Q"] %>
<% elsif @country_code == "OM"%>
	<%	top_airlines = ["WY","IX","AI","FZ","6E","G9","G8","SG","EY","OV","UL","EK"]  %>
<%elsif @country_code == "QA"%>
	<%	top_airlines = ["QR","6E","IX","UL","PR","TK","KU","OV","AI","BA","J9","RA"] %>
<%elsif @country_code == "KW"%>	
	<%	top_airlines = ["KU","J9","GF","6E","G9","IX","UL","5J","PR","BG","QJ"] %>
<%elsif @country_code == "BH"%>	
	<%	top_airlines = ["GF","IX","G9","WY","FZ","UL","EK","AI","5J","LH","6E"] %>
<% end %>
<% if top_airlines.present? %>
<div class="white-card">
	<h2><%= t("brand.other_top_airlines")%></h2>
	<ul class="list-unstyled top-airlines">
		<% top_airlines.uniq.each do |airline_code| %>
		<% airline_name =  airline_code == "AI" ? "Air India" : t("airlines.#{airline_code}") %>
		<% formated_carrier_name =  airline_name.downcase.gsub(" ",'-').gsub('--','-') %>
		<% if @country_code == "AE" || @country_code == "SA" %>
		<li>
			<a href="<%= "#{@host_name}/flight-booking/"+format_airline_name(airline_name).downcase.gsub(" ", "-").gsub("--","-") + ".html" %>" class="airline-link" title="<%= airline_name %>">
				<div class="R-airline-logo "><span class="carrier-logo <%= formated_carrier_name %>"></span></div>
				<div class="R-airline-name"><span><%= airline_name %></span></div>
			</a>
			<div class="R-book">
				<%= link_to( "Book", "#{@host_name}/flight-booking/" + format_airline_name(I18n.with_locale(:en) { t("airlines.#{airline_code}") }).downcase.gsub(" ", "-").gsub("--","-") + ".html",:class=>"booking-btn", :title => "#{airline_name} Flight Booking" ) %>
			</div>
			<div class="clearfix"></div>
		</li>
		<% else %>
		<li>
			<a href="<%= "#{@host_name}/flight-booking/"+format_airline_name(airline_name).downcase.gsub(" ", "-").gsub("--","-") + ".html" %>" class="airline-link">
				<div class="R-airline-logo "><span class="carrier-logo <%= formated_carrier_name %>"></span></div>
				<div class="R-airline-name"><span><%= airline_name %></span></div>
			</a>
			<div class="R-book">
				<%= link_to( "Book", "#{@host_name}/flight-booking/" + format_airline_name(I18n.with_locale(:en) { t("airlines.#{airline_code}") }).downcase.gsub(" ", "-").gsub("--","-") + ".html",:class=>"booking-btn") %>
			</div>
			<div class="clearfix"></div>
		</li>
		<% end %>
		<% end %>
	</ul>
</div><!--/white-card-->
<%end%>
