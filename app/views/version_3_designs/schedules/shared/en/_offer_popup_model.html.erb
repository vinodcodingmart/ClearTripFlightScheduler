      <div class="modal-content">
        <% if @section.include?("int") %>
          <div class="modal-header">
            <h3 class="modal-title"> Grab Instant cashback of up to ₹ 10000 on international flights<span class="trip-close" data-dismiss="modal" aria-label="Close"><img src="https://waytogo-assets.s3-ap-southeast-1.amazonaws.com/waytogo-staging/images/close.png"></span></h3>
          </div>
