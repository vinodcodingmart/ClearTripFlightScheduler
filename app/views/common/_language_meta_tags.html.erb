<% if @meta_page_type == "booking-overview" && @country_code == "SA" && @carrier_code == "G9"  %>
	<link rel="alternate" hreflang="x-default" href="https://www.flyin.com/airlines/Air-Arabia.en.html" >
<% else %>
	<link rel="alternate" hreflang="x-default" href="<%= "#{@host_name}/#{@page_type}/#{@file_name}" %>" >
<% end %>

<link rel="canonical" href="<%= @host_name + request.path %>">
<%if page_number == 1 %>
<%  if  (@meta_page_type=="airline_routes" || @meta_page_type=="from" || @meta_page_type == "to" ) %>
	<% country_list = COUNTRY_LIST - ["SA","QA"] %>
	<% else %>
	<% country_list = COUNTRY_LIST %>
	<% end %>
	<%  country_list.uniq.each do |country_code| %>
			
			<% if country_code == "SA" &&  @meta_page_type == "booking-overview" && @carrier_code == "G9" %>
				<link rel="alternate" hreflang="<%= "en-#{country_code.downcase}"%>" href="https://www.flyin.com/airlines/Air-Arabia.en.html">
			<% else %>
				<link rel="alternate" hreflang="<%= "en-#{country_code.downcase}"%>" href="<%= "#{host_name(country_code)}/#{@page_type}/#{@file_name}"%>">
	    	<% end %>
	    <% unless country_code == "IN" %>
				<link rel="alternate" hreflang="<%= "ar-#{country_code.downcase}"%>" href="<%= "#{host_name(country_code)}/ar/#{@page_type}/#{@file_name}"%>">
	    <% end %>
		<% end %>
<% end %>
