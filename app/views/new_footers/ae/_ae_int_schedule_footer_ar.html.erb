<footer>
	<div class="more-links">
		<div class="container pad-lzero">
			<% if footer_airline_data.present? %>
      <ul class="list-inline secondaryLinks weaker footerMenus">
				<% footer_airline_data.each_with_index do |airline,index| %>
				<% carrier_name_ar = I18n.t("airlines.#{airline[1]}") %>
        <% if index == 0 %>
        <li><%= t('footer.intl_airlines') %> :</li>
        <li><%= link_to carrier_name_ar, "/ar/flight-booking/#{airline[0]}",title: carrier_name_ar %></li>
        <% else %>
        <li><%= link_to carrier_name_ar, "/ar/flight-booking/#{airline[0]}",title: carrier_name_ar %></li>
        <% end %>
        <% end %>
      </ul>
      <% end %>

		<%if footer_links_data_arabic.present? %>
    <ul class="list-inline secondaryLinks weaker footerMenus">
      <% footer_links_data_arabic.compact.each_with_index do |footer,index| %>
